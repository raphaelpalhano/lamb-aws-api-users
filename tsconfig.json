{
  "compilerOptions": {
    "target": "es5",
     "module": "commonjs",
     "lib": [
       "es6"
     ], 
     "allowJs": true,
    "removeComments": true,
    "resolveJsonModule": true,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "sourceMap": true,
    "outDir": "./dist",
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "Node",
    "skipLibCheck": true,
    "noImplicitAny": true,
    "strictPropertyInitialization": false,

    
  },
  
}